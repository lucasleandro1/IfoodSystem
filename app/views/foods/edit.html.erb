<h1>Editar Produto</h1>

<%= form_with model: @food, local: true do |form| %>
  <% if @food.errors.any? %>
    <div style="color: red;">
      <h2>Erro(s) ao editar o produto:</h2>
      <ul>
        <% @food.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nome do Produto" %>
    <%= form.text_field :name, value: @food.name, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :description, "Descrição" %>
    <%= form.text_area :description, value: @food.description, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :price, "Preço" %>
    <%= form.number_field :price, value: @food.price, step: 0.01, class: 'form-control' %>
  </div>

  <div>
    <%= form.submit "Atualizar Produto", class: 'btn btn-primary' %>
  </div>

<% end %>

<%= link_to 'Voltar', foods_path, class: 'btn btn-secondary' %>
