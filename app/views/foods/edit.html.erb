<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card">
      <div class="card-header">
        <h3 class="mb-0">
          <i class="fas fa-edit me-2"></i>Editar Comida
        </h3>
      </div>
      <div class="card-body">
        <%= form_with model: @food, local: true do |form| %>
          <% if @food.errors.any? %>
            <div class="alert alert-danger">
              <h6>Erros encontrados:</h6>
              <ul class="mb-0">
                <% @food.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :name, "Nome da Comida", class: "form-label" %>
            <%= form.text_field :name, class: "form-control", placeholder: "Ex: Pizza Margherita" %>
          </div>

          <div class="mb-3">
            <%= form.label :description, "Descrição", class: "form-label" %>
            <%= form.text_area :description, class: "form-control", rows: 4, 
                               placeholder: "Descreva os ingredientes e características da comida..." %>
          </div>

          <div class="mb-4">
            <%= form.label :price, "Preço (R$)", class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">R$</span>
              <%= form.number_field :price, step: 0.01, min: 0, class: "form-control", 
                                   placeholder: "0,00" %>
            </div>
          </div>

          <div class="d-flex gap-2">
            <%= form.submit "Atualizar Comida", class: "btn btn-primary" %>
            <%= link_to "Cancelar", foods_path, class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
