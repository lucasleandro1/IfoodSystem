<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><%= current_user.restaurante? ? t('views.foods.index.title_restaurant') : t('views.foods.index.title_client') %></h1>
        <% if current_user.restaurante? %>
          <%= link_to new_food_path, class: "btn btn-success" do %>
            <i class="fas fa-plus me-2"></i><%= t('views.foods.index.new_food') %>
          <% end %>
        <% end %>
      </div>

      <% if current_user.present? %>
        <% if @foods.any? %>
          <div class="row">
              <%= render @foods %>
          </div>
          
          <!-- Pagination -->
          <div class="d-flex flex-column align-items-center mt-4">
            <div class="pagination-info mb-3">
              <%= t('views.foods.index.pagination_info', current: @foods.current_page, total: @foods.total_pages, count: @foods.total_count) %>
            </div>
            <%= paginate @foods %>
          </div>
        <% else %>
          <div class="text-center py-5">
            <div class="mb-4">
              <i class="fas fa-utensils fa-4x text-muted"></i>
            </div>
            <h3 class="text-muted mb-3">
              <%= current_user.restaurante? ? t('views.foods.index.no_foods_restaurant') : t('views.foods.index.no_foods_client') %>
            </h3>
            <p class="text-muted mb-4">
              <%= current_user.restaurante? ? t('views.foods.index.no_foods_description_restaurant') : t('views.foods.index.no_foods_description_client') %>
            </p>
            <% if current_user.restaurante? %>
              <%= link_to new_food_path, class: "btn btn-primary" do %>
                <i class="fas fa-plus me-2"></i><%= t('views.foods.index.register_first_food') %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-5">
          <h3 class="text-muted"><%= t('views.foods.index.login_to_view') %></h3>
        </div>
      <% end %>
    </div>
  </div>
</div>
