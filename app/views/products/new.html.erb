<h1>Novo Prato</h1>

<%= form_with model: @product do |f| %>
  <div class="field">
    <%= f.label :name, "Nome do Prato" %><br>
    <%= f.text_field :name %><br><br>
  </div>

  <div class="field">
    <%= f.label :description, "Descrição" %><br>
    <%= f.text_area :description %><br><br>
  </div>

  <div class="field">
    <%= f.label :price, "Preço" %><br>
    <%= f.number_field :price, step: 0.01 %><br><br>
  </div>

  <div class="actions">
    <%= f.submit "Criar Prato" %>
  </div>
<% end %>
