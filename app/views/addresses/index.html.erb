<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
          <i class="fas fa-map-marker-alt me-2"></i><%= t('views.addresses.index.title') %>
        </h1>
        <%= link_to new_address_path, class: "btn btn-primary" do %>
          <i class="fas fa-plus me-2"></i><%= t('views.addresses.index.new_address') %>
        <% end %>
      </div>

      <% if @addresses.any? %>
        <div class="row">
          <%= render @addresses %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <div class="mb-4">
            <i class="fas fa-map-marker-alt fa-4x text-muted"></i>
          </div>
          <h3 class="text-muted mb-3"><%= t('views.addresses.index.no_addresses') %></h3>
          <p class="text-muted mb-4">
            <%= t('views.addresses.index.no_addresses_description') %>
          </p>
          <%= link_to new_address_path, class: "btn btn-primary" do %>
            <i class="fas fa-plus me-2"></i><%= t('views.addresses.index.register_first_address') %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
