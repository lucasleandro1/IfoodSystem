<%= form_with model: address, local: true, class: "needs-validation", novalidate: true do |f| %>
  <% if address.errors.any? %>
    <div class="alert alert-danger">
      <h5><i class="fas fa-exclamation-triangle me-2"></i>Erro ao salvar endereço:</h5>
      <ul class="mb-0">
        <% address.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-8">
      <div class="mb-3">
        <%= f.label :street, class: "form-label" do %>
          <i class="fas fa-road me-2"></i>Rua/Avenida
        <% end %>
        <%= f.text_field :street,
            class: "form-control",
            placeholder: "Ex: Rua das Flores, Avenida Paulista...",
            required: true %>
        <div class="invalid-feedback">
          Por favor, informe o nome da rua/avenida.
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="mb-3">
        <%= f.label :number, class: "form-label" do %>
          <i class="fas fa-hashtag me-2"></i>Número
        <% end %>
        <%= f.text_field :number, 
            class: "form-control", 
            placeholder: "123",
            required: true %>
        <div class="invalid-feedback">
          Por favor, informe o número.
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="mb-3">
        <%= f.label :neighborhood, class: "form-label" do %>
          <i class="fas fa-map me-2"></i>Bairro
        <% end %>
        <%= f.text_field :neighborhood,
            class: "form-control",
            placeholder: "Ex: Centro, Vila Madalena...",
            required: true %>
        <div class="invalid-feedback">
          Por favor, informe o bairro.
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to "Cancelar", addresses_path, class: "btn btn-outline-secondary" %>
    <%= f.submit submit_text, class: submit_class %>
  </div>
<% end %>

<script>
  (() => {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.prototype.slice.call(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>