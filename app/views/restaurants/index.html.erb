<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4">
        <i class="fas fa-store me-2"></i>Restaurantes
      </h1>

      <% if @restaurants.any? %>
        <div class="row">
          <% @restaurants.each do |restaurant| %>
            <div class="col-md-6 col-lg-4 mb-4">
              <div class="card h-100">
                <div class="card-body">
                  <h5 class="card-title text-primary">
                    <i class="fas fa-utensils me-2"></i>
                    <%= link_to split_name(restaurant.email), restaurant_path(restaurant), 
                        class: "text-decoration-none" %>
                  </h5>
                  
                  <% if restaurant.addresses.any? %>
                    <div class="mb-3">
                      <h6 class="text-muted small mb-2">
                        <i class="fas fa-map-marker-alt me-1"></i>Endereços:
                      </h6>
                      <% restaurant.addresses.limit(2).each do |address| %>
                        <p class="card-text text-muted small mb-1">
                          <%= address.address_line %>
                        </p>
                      <% end %>
                      <% if restaurant.addresses.count > 2 %>
                        <small class="text-muted">
                          +<%= restaurant.addresses.count - 2 %> endereço(s) adicional(is)
                        </small>
                      <% end %>
                    </div>
                  <% else %>
                    <p class="card-text text-muted small">
                      <i class="fas fa-info-circle me-1"></i>
                      Nenhum endereço cadastrado
                    </p>
                  <% end %>

                  <% foods_count = restaurant.foods.count %>
                  <p class="card-text">
                    <span class="badge bg-primary">
                      <i class="fas fa-utensils me-1"></i>
                      <%= pluralize(foods_count, 'comida', 'comidas') %> disponível
                    </span>
                  </p>
                </div>
                <div class="card-footer bg-transparent">
                  <%= link_to restaurant_path(restaurant), class: "btn btn-outline-primary w-100" do %>
                    <i class="fas fa-eye me-2"></i>Ver Detalhes
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <div class="mb-4">
            <i class="fas fa-store fa-4x text-muted"></i>
          </div>
          <h3 class="text-muted mb-3">Nenhum restaurante encontrado</h3>
          <p class="text-muted mb-4">
            Não há restaurantes cadastrados no momento.
          </p>
          <%= link_to root_path, class: "btn btn-primary" do %>
            <i class="fas fa-arrow-left me-2"></i>Voltar ao Início
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
